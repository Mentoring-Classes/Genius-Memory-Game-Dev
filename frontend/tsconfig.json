{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"] // Alias para a pasta src (relativo ao tsconfig.json)
    }
  },
  "include": ["./src/**/*"] // Inclui todos os arquivos na pasta src
}